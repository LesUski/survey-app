{
  "name": "survey-app",
  "version": "0.1.0",
  "bin": {
    "survey-app": "bin/survey-app.js"
  },
  "scripts": {
    "build": "rm -rf build && tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:integration:full": "./scripts/run-integration-tests.sh",
    "cdk": "cdk",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write 'bin/**/*.ts' 'lib/**/*.ts' 'lambda/**/*.ts' 'test/**/*.ts'",
    "lint:lambda": "eslint lambda/",
    "localstack:start": "docker-compose up -d",
    "localstack:stop": "docker-compose down",
    "localstack:deploy": "./scripts/local-deploy.sh",
    "localstack:sample-data": "./scripts/sample-data.sh",
    "localstack:logs": "docker-compose logs -f",
    "dev": "npm run localstack:start && npm run localstack:deploy && npm run localstack:sample-data",
    "deploy:local": "./scripts/deploy.sh dev localstack",
    "deploy:aws:dev": "./scripts/deploy.sh dev aws",
    "deploy:aws:prod": "./scripts/deploy.sh prod aws",
    "clean": "rm -rf build dist cdk.out"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.147",
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "aws-cdk": "2.1003.0",
    "aws-cdk-local": "^2.19.2",
    "aws-sdk-client-mock": "^3.0.0",
    "axios": "^1.6.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-import-resolver-typescript": "^4.2.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.26.1"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^2.16.0",
    "@aws-sdk/client-dynamodb": "^3.758.0",
    "@aws-sdk/lib-dynamodb": "^3.758.0",
    "@aws-sdk/util-dynamodb": "^3.758.0",
    "aws-cdk-lib": "2.181.1",
    "constructs": "^10.0.0",
    "dynamoose": "^4.0.3",
    "source-map-support": "^0.5.21",
    "uuid": "^11.1.0"
  }
}
